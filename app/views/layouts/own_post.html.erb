<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
	<title>Miniblog</title>
	<%= stylesheet_link_tag "application", :media =>
	"all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
	<!-- END:head -->
<body>
	<!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Miniblog</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="/posts">All Posts</a></li>
            <% if current_user %>
          	  <li class='active'><a href="/users/<%= current_user.id %>/posts">My Posts</a></li>
          	<% else %>
          	  <li class='active'><a href='#'>My Posts</a></li>
          	<% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          	<% if current_user %>
              <a href="/users/<%= current_user.id %>" class='navbar-brand hidden-sm'><%= current_user.name %></a>
              <li><a href="/logout">Log out</a></li>
            <% else %>
			  <li><a href="javascript:void(0);" class="show_do_log_in">Log in</a></li>
			  <li><a href="signup">Sign up</a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

	<div id="main" class="container">
		<%= yield %>
  </div>
	<div id="footer">
      <div class="container">
        <p class="text-muted">James Lee Nov., 2013
          <a href="mailto:lizihao945@gmail.com">Contact Me</a>
        </p>
      </div>
  </div>
</body>
</html>
<% if notice %><p id="notice"><%= notice %><% end %></p>
<h1>Login</h1>
<%= form_tag sessions_path, remote: true do %>
  <div class="field">
	<%= label_tag :email %>:
	<%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
	<%= label_tag 'Password' %>:
	<%= password_field_tag :passwd %>
  </div>
<p class="button">
	<%= submit_tag 'Login' %></p>
<% end %>
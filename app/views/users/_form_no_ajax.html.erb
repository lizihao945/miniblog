<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>:
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :image_url %>:
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <lable for="user_passwd">Password:</lable>
    <%= f.password_field :passwd %>
  </div>
  <div class="field">
    <lable for="user_passwd_confirmation">Password Confirmation:</lable>
    <%= f.password_field :passwd_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

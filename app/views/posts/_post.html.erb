<%= form_for [post, Comment.new],
html: { id: "new_comment_on_#{post.id}" },
remote: true do |f| %>
  <p>
	<%= f.label :content, "New Comment" %>
	<br />
	<%= f.text_area :content, class: 'form-control', rows: 5 %></p>
  <p>
  <%= submit_tag 'Add Comment', class: 'btn', role: 'button' %></p>
<% end %>
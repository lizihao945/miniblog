<% if @comment.user == current_user %>
	$( "#comment_<%= @comment.id %>" ).effect( "blind", { percent: 0 }, 500, callback );
	function callback() {
	  $( "#comment_<%= @comment.id %>" ).remove();
	  $( "#comments_count_<%= @comment.post_id %>" ).text("(<%= @comment.post.comments.count %>)");
};
<% else %>
	alert("You can only delete your own comments!");
<% end %>
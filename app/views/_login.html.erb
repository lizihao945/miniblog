<%= form_tag sessions_path, remote: true do %>
  <div class="field">
	<%= label_tag :email %>:<br />
	<%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
	<%= label_tag 'Password' %>:<br />
	<%= password_field_tag :passwd %>
  </div>
<p class="button">
	<%= submit_tag 'Login' %></p>
<% end %>
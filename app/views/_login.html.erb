<%= form_tag sessions_path, remote: true do %>
  <div class="field">
	<%= label_tag :email %><br />
	<%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Enter Email' %>
  </div>
  <div class="field">
	<%= label_tag 'Password' %><br />
	<%= password_field_tag :passwd, params[:passwd], class: 'form-control', placeholder: 'Enter Password' %>
  </div>
  <br />
  <%= submit_tag 'Login', class: 'btn', role: 'button'  %>
<% end %>